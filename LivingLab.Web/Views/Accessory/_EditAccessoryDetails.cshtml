@model LivingLab.Web.Models.ViewModels.Accessory.AccessoryDetailsViewModel

@{
    ViewData["Title"] = "Accessory Details";
}


<div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="accessoryId">
            Accessory Id
        </label>
        <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="accessoryId" name="Accessory.Id" type="text" disabled>
    </div>
</div>
<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="accessoryType">
            Accessory Type
        </label>
        <div class="relative">

            <select class="block appearance-none w-full bg-white text-gray-900 border border-gray-200 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="accessoryType" name="Accessory.AccessoryType.Id">
            </select>
        </div>
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="accessoryName">
            Accessory Name
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="accessoryName" name="Accessory.AccessoryType.Name" type="text">
    </div>
</div>
<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-description">
            Description
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-description" type="text" name="Accessory.AccessoryType.Description">
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-Status">
            Status
        </label>
        <div class="relative">
            <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-Status" name="Accessory.Status" type="text">
        </div>
    </div>

</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-dueDate">
            Due Date
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-dueDate" type="text" name="Accessory.DueDate">
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-labUser">
            Borrowed By
        </label>
        <div class="relative">
            <select class="block appearance-none w-full bg-white text-gray-900 border border-gray-200  py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-labUser" name="Accessory.LabUserId">
                <option value="0">Tom</option>
                <option value="1">Samy</option>
            </select>
        </div>
    </div>

</div>