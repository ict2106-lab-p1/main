@using Microsoft.AspNetCore.Identity
@using LivingLab.Domain.Entities.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Living Lab Dashboard</title>

    <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,700,300italic,400italic,700italic&display=swap"
          rel="stylesheet"
          type="text/css" />
    @* Replace the cdn with your style scripts *@
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
</head>
<body>
    <div>
        <div class="leading-normal tracking-normal " id="main-body">
            <div class="flex flex-wrap">
                @* sidebar *@
                <div class="w-1/2 md:w-1/3 lg:w-64 fixed md:top-0 md:left-0 h-screen lg:block bg-gray-100 border-r z-30 bg-gray-700 text-white"
                     id="main-nav">
                    <div class="w-full h-20 flex px-4 pr-6 mt-24 lg:mt-8 items-center justify-center mb-8">
                        <a class="text-2xl font-semibold" href="#">
                          Living Lab
                        </a>
                    </div>

                           @if (SignInManager.IsSignedIn(User)) {
                               <div class="mb-4 px-4 space-y-1 text-white">

                               <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                   <button  type="submit" class="nav-link btn btn-link text-dark px-4 ">Log Out</button> </form>
                               <a class="w-full h-12 flex items-center hover:bg-gray-600  active:bg-gray-500 focus:outline-none focus:ring focus:ring-gray-300 rounded-lg"
                                  @*href="#"*@
                                  asp-area="" asp-controller="Home" asp-action="Index">
                                   <span class="px-4">Home</span>
                               </a>

                               <a class="w-full h-12 flex items-center hover:bg-gray-600  active:bg-gray-500 focus:outline-none focus:ring focus:ring-gray-300 rounded-lg"
                                  @*href="#"*@
                                  asp-area="" asp-controller="Home" asp-action="Privacy">

                                   <span class="px-4">Privacy</span>
                               </a>
                                      </div>                
                           }  
                </div>
                @* end sidebar *@

                <div class="w-full bg-gray-100 pl-0 lg:pl-64 min-h-screen"
                     id="main-content">
                    @* navbar start *@
                    <div class="sticky top-0 z-100  ">
                        <div class="w-full h-20 px-6 bg-gray-700 text-white border-b flex items-center justify-between">
                            <!-- right navbar -->
                            <div class="flex items-center relative">
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                    @* navbar end *@
                    <div class="p-6 bg-gray-100 mb-20 h-auto">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - livinglab_main - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>