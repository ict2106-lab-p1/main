@using LivingLab.Web.Views.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Living Lab Dashboard</title>

    <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    <link
            href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,700,300italic,400italic,700italic&display=swap"
            rel="stylesheet"
            type="text/css"/>
    @* Replace the cdn with your style scripts *@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div>
        <div class="leading-normal tracking-normal" id="main-body">
            <div class="flex flex-wrap">
                @* sidebar *@
                <div
                    class="w-1/2 md:w-1/3 lg:w-64 fixed md:top-0 md:left-0 h-screen lg:block bg-dark border-r z-30"
                    id="main-nav">
                    <div
                        class="w-full h-20 flex px-4 pr-6 mt-24 lg:mt-8 items-center justify-center mb-8">
                        <a href="#">
                            @* logo here *@
                            <img
                                class="font-semibold text-3xl text-blue-400 pl-4 h-24"
                                @* src="" *@
                                alt="Living Lab"/>
                        </a>
                    </div>
                    
                    <div class="w-full h-full mb-4">
                        <ul class="relative">
                            <li class="relative @Html.ActiveClass("Home", "Index")">
                                <a
                                    class="w-full flex text-gray-400 items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                    asp-action="Index" asp-controller="Home">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                    </svg>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                            <div class="mt-16">
                                <span class="text-gray-400 px-5">All Labs</span>
                                <hr class="mt-2 mb-4 border-gray-600"/>
                                <li class="relative">
                                    <a
                                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                        asp-action="" asp-controller="">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                        </svg>
                                        <span>SIT-LAB1A</span>
                                    </a>
                                </li>
                                <li class="relative">
                                    <a
                                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                        asp-action="" asp-controller="">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                        </svg>
                                        <span>SIT-LAB2A</span>
                                    </a>
                                </li>
                            </div>
                            <div class="mt-16">
                                <span class="text-gray-400 px-5">Logs</span>
                                <hr class="mt-2 mb-4 border-gray-600"/>
                                <li class="relative">
                                    <a
                                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                        asp-action="" asp-controller="">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                        </svg>
                                        <span>Automatic Logging</span>
                                    </a>
                                </li>
                                <li class="relative">
                                    <a
                                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                        asp-action="Index" asp-controller="ManualLogs">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                        </svg>
                                        <span>My Logs</span>
                                    </a>
                                </li>
                            </div>
                            <div class="mt-16">
                                <span class="text-gray-400 px-5">Settings</span>
                                <hr class="mt-2 mb-4 border-gray-600"/>
                                <li class="relative">
                                    <a
                                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                        asp-action="" asp-controller="">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                        </svg>
                                        <span>Notifications</span>
                                    </a>
                                </li>
                                <li class="relative">
                                    <a
                                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                                        asp-action="Index" asp-controller="ManualLogs">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                        </svg>
                                        <span>Device Settings</span>
                                    </a>
                                </li>
                            </div>
                        </ul>
                    </div>
                </div>
                
                @* end sidebar *@
    
                <div
                    class="w-full bg-gray-100 pl-0 lg:pl-64 min-h-screen"
                    id="main-content">
                    @* navbar start *@
                    <div class="sticky top-0 z-100">
                        <div
                            class="w-full h-20 px-6 bg-dark border-b flex items-center justify-between">
    
                            <!-- right navbar -->
                            <div class="flex items-center relative">
                            <!--
                            <button
                                class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded shadow">
                                Logout
                            </button>
                            -->
                            </div>
                        </div>
                    </div>
                    @* navbar end *@
    
                    <div class="p-6 bg-gray-100 mb-20 h-auto">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
