@using LivingLab.Web.Views.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Living Lab Dashboard</title>

    <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    <link
            href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,700,300italic,400italic,700italic&display=swap"
            rel="stylesheet"
            type="text/css"/>
    @* Replace the cdn with your style scripts *@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    
<div id="main-body" class="relative min-h-screen md:flex">
    <!-- mobile menu -->
    <div class="bg-dark text-gray-100 flex justify-between md:hidden">
        <a class="block p-4 font-semibold text-2xl text-gray-400 " asp-action="Index" asp-controller="Home">
            Living Lab
        </a>

        <button class="mobile-menu-button p-4 focus:outline-none focus:bg-gray-700">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
    </div>
    <!-- mobile menu end -->
    
    <!-- sidebar -->
    <div
        class="side-bar w-64 lg:block bg-dark space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out">
        <div
            class="w-full flex px-4 pr-6 my-auto items-center justify-start ">
            <img src="images/logo.png" class="h-12 w-12"/>
            <a class="font-semibold text-2xl text-gray-400 pl-4" asp-action="Index" asp-controller="Home">
                Living Lab
            </a>
        </div>
        <ul class="relative">
            <li class="relative @Html.ActiveClass("Home", "Index")">
                <a
                    class="mt-14 w-full flex text-gray-400 items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                    asp-action="Index" asp-controller="Home">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                    </svg>
                    <span>Dashboard</span>
                </a>
            </li>
            <div class="mt-16">
                <span class="text-gray-400 px-5">All Labs</span>
                <hr class="mt-2 mb-4 border-gray-600"/>
                <li class="relative">
                    <a
                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                        asp-action="" asp-controller="">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span>SIT-LAB1A</span>
                    </a>
                </li>
                <li class="relative">
                    <a
                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                        asp-action="" asp-controller="">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span>SIT-LAB2A</span>
                    </a>
                </li>
            </div>
            <div class="mt-16">
                <span class="text-gray-400 px-5">Logs</span>
                <hr class="mt-2 mb-4 border-gray-600"/>
                <li class="relative">
                    <a
                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                        asp-action="" asp-controller="">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span>Automatic Logging</span>
                    </a>
                </li>
                <li class="relative">
                    <a
                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                        asp-action="Index" asp-controller="ManualLogs">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span>My Logs</span>
                    </a>
                </li>
            </div>
            <div class="mt-16">
                <span class="text-gray-400 px-5">Settings</span>
                <hr class="mt-2 mb-4 border-gray-600"/>
                <li class="relative">
                    <a
                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                        asp-action="" asp-controller="">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span>Notifications</span>
                    </a>
                </li>
                <li class="relative">
                    <a
                        class="w-full flex items-center text-gray-400 hover:text-gray-700 h-10 pl-4 hover:bg-highlight cursor-pointer transition duration-300 ease-in-out"
                        asp-action="Index" asp-controller="ManualLogs">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span>Device Settings</span>
                    </a>
                </li>
            </div>
        </ul>
    </div>
    <!-- end sidebar -->

    <!-- start content -->
    <div id="main-content" class="flex-1 p-6 bg-gray-100 bg-gray-100 min-h-screen">
        @RenderBody()
    </div>
    <!-- end content -->
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
